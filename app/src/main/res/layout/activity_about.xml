<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.about.AboutActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wall"
        android:alpha="0.5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Caraka Mobile"
        android:textColor="@color/primary"
        android:textSize="40sp"
        android:fontFamily="@font/oleoscriptbold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120sp"
        android:textStyle="italic|bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caraka mobile is an application designed to reintroduce Javanese script it also acts as a simple learning platform"
        android:textColor="@color/primary"
        android:textSize="30sp"
        android:paddingLeft="40sp"
        android:paddingRight="40sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="230dp"
        android:fontFamily="@font/oleoscriptreguler"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caraka mobile is designed by the Bangkit Academy Capstone Team C241-PR556 which consists of:"
        android:textColor="@color/primary"
        android:textSize="30sp"
        android:paddingLeft="40sp"
        android:paddingRight="40sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="450dp"
        android:fontFamily="@font/oleoscriptreguler"
        />
    <LinearLayout
        android:id="@+id/button_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="50dp"
        android:paddingTop="120dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Haryo Wiradito"
            android:layout_marginTop="530dp"
            android:fontFamily="@font/oleoscriptbold"
            android:textSize="25sp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fahrur Rozi"
            android:fontFamily="@font/oleoscriptbold"
            android:textSize="25sp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muhammad Alfin Farhansyah"
            android:fontFamily="@font/oleoscriptbold"
            android:textSize="25sp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="William Tanardi"
            android:fontFamily="@font/oleoscriptbold"
            android:textSize="25sp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moh. Adib Syambudi"
            android:fontFamily="@font/oleoscriptbold"
            android:textSize="25sp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sebastian Surya Dharma"
            android:fontFamily="@font/oleoscriptbold"
            android:textSize="25sp"
            />
    </LinearLayout>
</RelativeLayout>